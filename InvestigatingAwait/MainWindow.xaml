<Window x:Class="InvestigatingAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvestigatingAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Click Me!" Height="45" Width="120" Click="button_Click"></Button>
        <Button x:Name="counter" Content="increase" Grid.Row="1" Height="45" Click="counter_Click" Width="120" HorizontalAlignment="Left"></Button>
        <Label HorizontalAlignment="Right" Height="45" Width="120" Grid.Row="1" Content="{Binding Number}"></Label>
    </Grid>
</Window>
