<Window x:Class="NumberOfPaths.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumberOfPaths"
        PreviewMouseMove="Window_PreviewMouseMove"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid ShowGridLines="True" x:Name="main" Loaded="main_Loaded" >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="Red" Grid.Row="0" Margin="56,10,9.6,19.2" MouseLeave="Grid_MouseLeave"  PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">
            
        </Grid>
        <TextBox Grid.Row="1" Height="50" Width="100" VerticalAlignment="Center" Text="{Binding GridBottomMargin}"></TextBox>
        <!--<StackPanel x:Name="myStackPanel" Background="Bisque" Margin="50">
            <TextBlock x:Name="myTextBlock" Margin="100" Background="White" Text="Hello, world" />
        </StackPanel>-->
    </Grid>
</Window>
